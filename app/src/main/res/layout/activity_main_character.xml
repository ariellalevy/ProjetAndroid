<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poudlard"
    android:scrollbars="vertical"
    tools:context=".vue.MainActivityCharacter">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/firstLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/secondLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/troisiemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="TextView"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/quatriemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="TextView"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/cinquiemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="TextView"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/sixemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="TextView"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/septiemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="TextView"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/huitiemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/neuviemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/dixemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/onziemeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                app:fontFamily="@font/bigelow_rules" />

            <TextView
                android:id="@+id/blanc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textSize="20sp"
                app:fontFamily="@font/bigelow_rules" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>